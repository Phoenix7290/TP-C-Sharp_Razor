@page
@model TP1_Razor.Pages.Exercises.Exercise12Model
@{
    ViewData["Title"] = "Exercício 12 - Cadastro de Eventos";
}

<h2>Exercício 12 - Cadastro de Eventos</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Event.Title">Título:</label>
        <input asp-for="Event.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Event.Date">Data:</label>
        <input asp-for="Event.Date" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Event.Location">Local:</label>
        <input asp-for="Event.Location" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

@if (Model.SubmittedEvent != null)
{
        <h3>Evento Cadastrado:</h3>
        <p>Título: @Model.SubmittedEvent.Title</p>
        <p>Data: @Model.SubmittedEvent.Date.ToShortDateString()</p>
        <p>Local: @Model.SubmittedEvent.Location</p>
        <p>Verifique o console para o log do evento.</p>
}

<p><a asp-page="/Index">Voltar para a página inicial</a></p>
