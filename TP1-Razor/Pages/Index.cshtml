@page
@model IndexModel
@{
    ViewData["Title"] = "TP 1 - Home";
}

<div>
    <h1>TP 1 - Razor Pages</h1>

    <h2>Lista de Produtos (Exercício 8)</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Navegação para Exercícios</h2>
    <ul>
        <li><a asp-page="/Exercises/Exercise8">Exercício 8 - Lista de Produtos (O Home em si)</a></li>
        <li><a asp-page="/Exercises/Exercise9">Exercício 9 - Exploração de Estrutura</a></li>
        <li><a asp-page="/Exercises/Exercise10">Exercício 10 - Formulário de Produto</a></li>
        <li><a asp-page="/Exercises/Exercise12">Exercício 12 - Cadastro de Eventos</a></li>
    </ul>
</div>