@page
@model TP2_Razor.Pages.Exercises.CityManager.CreateCityClientValidatedModel
@{
    ViewData["Title"] = "Questão 4 - Validação do Lado do Cliente";
}

<h2>Questão 4: Cadastro de Cidade com Validação do Lado do Cliente</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="Input.CityName">Nome da Cidade:</label>
        <input asp-for="Input.CityName" />
        <span asp-validation-for="Input.CityName" class="text-danger"></span>
    </div>
    <button type="submit">Enviar</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
        <p>@Model.Message</p>
}

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
