@page
@model TP2_Razor.Pages.Exercises.CityManager.CreateCityHandlerModel
@{
    ViewData["Title"] = "Questão 2 - Handler Parameters";
}

<h2>Questão 2: Cadastro de Cidade com Handler Parameter</h2>

<form method="post">
    <div>
        <label for="cityName">Nome da Cidade:</label>
        <input name="cityName" />
    </div>
    <button type="submit">Enviar</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}
