@page
@model TP2_Razor.Pages.Exercises.CityManager.CreateMultipleCountriesModel
@{
    ViewData["Title"] = "Questão 7 - Múltiplos Países";
}

<h2>Questão 7: Cadastro de Múltiplos Países</h2>

<form method="post">
    <table>
        <thead>
            <tr>
                <th>Nome do País</th>
                <th>Código do País</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < 5; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model.Input[i].CountryName" />
                    </td>
                    <td>
                        <input asp-for="@Model.Input[i].CountryCode" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit">Enviar</button>
</form>

@if (Model.Countries.Any())
{
    <h3>Países Submetidos:</h3>
    <ul>
        @foreach (var country in Model.Countries)
        {
            <li>@country.CountryName (Código: @country.CountryCode)</li>
        }
    </ul>
}
