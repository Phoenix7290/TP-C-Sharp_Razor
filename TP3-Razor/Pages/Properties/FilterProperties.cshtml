@page
@model TP3_Razor.Pages.Properties.FilterPropertiesModel
@{
    ViewData["Title"] = "Filtrar Propriedades";
}

<h1>@ViewData["Title"]</h1>

<form method="get">
    <div class="form-group">
        <label for="MinPrice">Preço Mínimo</label>
        <input asp-for="MinPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label for="MaxPrice">Preço Máximo</label>
        <input asp-for="MaxPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label for="CityName">Cidade</label>
        <input asp-for="CityName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="PropertyName">Nome da Propriedade</label>
        <input asp-for="PropertyName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<h3>Resultados</h3>
@if (Model.Properties.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Preço por Noite</th>
                <th>Cidade</th>
                <th>País</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in Model.Properties)
            {
                <tr>
                    <td>@property.Name</td>
                    <td>R$@property.PricePerNight</td>
                    <td>@property.City.Name</td>
                    <td>@property.City.Country.CountryName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhuma propriedade encontrada.</p>
}